# ------------------------------
# App settings
# ------------------------------
NODE_ENV=development
PORT=8080              # for server
CLIENT_URL=http://localhost:   # hub. Adjust to your hub/player dev ports

# ------------------------------
# Spotify API (required)
# Register your app at https://developer.spotify.com/dashboard/
# ------------------------------
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ------------------------------
# Optional external AI API keys
# (only if you decide to integrate later)
# ------------------------------
OPENAI_API_KEY=your_openai_key
GOOGLE_GEMINI_API_KEY=your_gemini_key
